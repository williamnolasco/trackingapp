@font-face
	font-family 'Dosis-ExtraLight'
	src url(../fonts/Dosis/Dosis-ExtraLight.ttf)
@font-face
	font-family 'Dosis-Light'
	src url(../fonts/Dosis/Dosis-Light.ttf)
@font-face
	font-family 'Dosis-SemiBold'
	src url(../fonts/Dosis/Dosis-SemiBold.ttf)
	
texto = #2d2d2d
blanco = #fff
rosado = #ea5959
morado =  #c452f0
celeste = #2cfcfd
//#53cafa
verde = #00bd8f
azul = #5998ea 
celeste-fondo = #dfffff

*
	margin 0
	padding 0
	box-sizing border-box
	
html
	font-size 16px
body
	font-family 'Dosis-ExtraLight'
	overflow-x hidden
center_x(position)
	position position
	left 50%
	-webkit-transform translateX(-50%)
	transform translateX(-50%)
center_x_and_center_y(position)
	position position
	left 50%
	top 50%
	-webkit-transform translateX(-50%) translateY(-50%)
	transform translateX(-50%) translateY(-50%)
style_line_down(color)
	&:after
		content ''
		width 30px
		height 1px
		background-color color
		center_x(absolute)
		bottom -10px
style_section_container(color)
	width 100%
	height auto
	background-color color
	padding 70px 0
	position relative
	left 0
	top 0
.row-nowrap
	display flex 
	flex-flow row nowrap 
	justify-content center
	align-items center
.column-wrap 
	display flex 
	flex-flow column wrap 
	justify-content center
	align-items center
.title-section
	font-size 1.4rem
	position relative
	text-align center
	margin-bottom 60px
.curve
	width 200px
	height 200px
	background-image url(../img/curva2.png)
	background-size cover
	background-position center
	position absolute
.features-image
	width 90%
	height 400px
	background-size cover
	background-position center
.home-image
	width 100%
	height 100vh
	background-image url(../img/home.jpg)
	background-size cover
	background-position center
	position relative
	left 0
	top 0
	.home-background
		width 100%
		height 100%
		/*background linear-gradient(to right bottom,
									rgba(rosado, 0.8) 0%,
									rgba(morado, 0.8) 100%)*/
		background-color rgba(rosado, 0.85)
		position absolute
		left 0
		top 0
		.button-surprise
			width 60px
			height 60px
			background-color blanco
			position fixed
			left 0
			top 0
			z-index 2
			span
				font-size 2rem
				color rosado
		.name
			width auto
			height auto
			center_x(absolute)
			top 30px
			p 
				color blanco
				font-size 1.4rem
				position relative
				style_line_down(blanco)
		.home-content-central
			width 90%
			center_x_and_center_y(absolute)
			p 
				text-align center
				&:nth-of-type(1), &:nth-of-type(3)
					font-size 1.6rem
					color blanco
				&:nth-of-type(2)
					font-size 2rem
					font-family 'Dosis-SemiBold'
					color blanco
			a 
				font-size 1.4rem
				text-decoration none
				color blanco
				border-radius 3rem
				border 1px solid blanco
				padding 13px 60px
				margin-top 50px
		.icon-chevron-thin-down
			color blanco
			font-size 3rem
			center_x(absolute)
			bottom 0
.functioning-container
	style_section_container(blanco)
	.functioning-content
		.title-section
			style_line_down(texto)
		.step
			width 200px
			height 200px
			background-image url(../img/circulo.png)
			background-size cover
			background-position center
			&:nth-of-type(2)
				margin 30px 0
			p 
				font-size 1.4rem
				color texto
				text-align center
.features-container
	style_section_container(rosado)
	.curve
		right -100px
		top -100px
		transform rotateX(180deg)
	.features-content
		.title-section
			color blanco
			style_line_down(blanco)
		.features-image
			background-image url(../img/screenshot.png)
		.list-features
			width 90%
			height auto
			margin-top 100px 
			margin-bottom 50px
			.feature 
				display flex 
				flex-flow row nowrap
				justify-content flex-start
				align-items flex-start
				margin-bottom 40px 
				&:nth-of-type(3)
					margin-bottom 0
				span
					font-size 2.5rem
					color blanco
					margin-right 10px
				.feature-description
					p 
						color blanco
						&:nth-of-type(1)
							font-size 1.5rem
							font-family 'Dosis-SemiBold'
						&:nth-of-type(2)
							font-size 1.4rem
							font-family 'Dosis-ExtraLight'
.features-mobile
	background-color blanco
	.features-content
		.title-section
			color texto 
			style_line_down(texto)
		.list-features
			.feature
				span 
					color texto 
				.feature-description
					p
						color texto	
.made-by-container
	style_section_container(rosado)
	padding 30px 0
	.curve
		transform rotateX(180deg)
		right -120px
		top -120px
	.made-by-content
		p 
			font-size 1.4rem
			color blanco
			margin-bottom 30px
			span
				color blanco
				margin 0 10px 
		img 
			width 270px
			height 90px
footer
	style_section_container(blanco)
	padding 15px 0
	ul 
		list-style none
		li 
			color rosado
			font-size 1.2rem
			font-family 'Dosis-Light'
			&:nth-of-type(2)
				margin 0 20px
	
	