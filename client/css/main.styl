@font-face
	font-family 'Dosis-ExtraLight'
	src url(../fonts/Dosis/Dosis-ExtraLight.ttf)
@font-face
	font-family 'Dosis-Light'
	src url(../fonts/Dosis/Dosis-Light.ttf)
@font-face
	font-family 'Dosis-SemiBold'
	src url(../fonts/Dosis/Dosis-SemiBold.ttf)
	
texto = #2d2d2d
blanco = #fff
rosado = #ea5959
morado =  #c452f0
celeste = #2cfcfd
//#53cafa
verde = #00bd8f
azul = #5998ea 
celeste-fondo = #dfffff
plomo = #6a6a6a
negro = #000
plomo-claro = #a9a9a9
plomo-borde = #b5b2b2

*
	margin 0
	padding 0
	box-sizing border-box
	
html
	font-size 14px
body
	font-family 'Dosis-ExtraLight'
	overflow-x hidden
center_x(position)
	position position
	left 50%
	-webkit-transform translateX(-50%)
	transform translateX(-50%)
center_y(position)
	position position
	top 50%
	-webkit-transform translateY(-50%)
	transform translateY(-50%)
center_x_and_center_y(position)
	position position
	left 50%
	top 50%
	-webkit-transform translateX(-50%) translateY(-50%)
	transform translateX(-50%) translateY(-50%)
style_line_down(color)
	&:after
		content ''
		width 30px
		height 1px
		background-color color
		center_x(absolute)
		bottom -10px
style_section_container(color)
	width 100%
	height auto
	background-color color
	padding 70px 0
	position relative
	left 0
	top 0
.row-nowrap
	display flex 
	flex-flow row nowrap 
	justify-content center
	align-items center
.row-wrap 
	display flex 
	flex-flow row wrap 
	justify-content center
	align-items center	
.column-wrap 
	display flex 
	flex-flow column wrap 
	justify-content center
	align-items center
.title-section
	width 100%
	font-size 1.4rem
	position relative
	text-align center
	margin-bottom 60px
.curve
	width 170px
	height 170px
	background-image url(../img/curva2.png)
	background-size cover
	background-position center
	position absolute
input::-webkit-input-placeholder
	font-size 1.3rem
	color plomo-claro 
	font-family 'Dosis-ExtraLight'
input::-moz-placeholder
	font-size 1.3rem
	color plomo-claro 
	font-family 'Dosis-ExtraLight'
input:-ms-input-placeholder
	font-size 1.3rem
	color plomo-claro 
	font-family 'Dosis-ExtraLight'
input:-moz-placeholder
	font-size 1.3rem
	color plomo-claro 
	font-family 'Dosis-ExtraLight'
.display-block
	display block !important
.image-slider 
	width 100%
	height 100%
	background-size cover 
	background-position center
	position relative
.home-image
	width 100%
	height 100vh
	background-image url(../img/home.jpeg)
	background-size cover
	background-position center
	background-attachment fixed
	position relative
	left 0
	top 0
	.home-background
		width 100%
		height 100%
		background-color rgba(negro, 0.7)
		position fixed
		left 0
		top 0
		.button-surprise
			display none
			width 60px
			height 60px
			background-color transparent
			border-right 1px solid blanco 
			border-bottom 1px solid blanco
			position fixed
			left 0
			top 0
			z-index 2
			span
				font-size 2rem
				color blanco
				cursor pointer
		.name
			width auto
			height auto
			center_x(absolute)
			top 30px
			p 
				color blanco
				font-size 1.4rem
				position relative
				style_line_down(blanco)
		.home-content-central
			width 90%
			center_x_and_center_y(absolute)
			p 
				text-align center
				&:nth-of-type(1), &:nth-of-type(3)
					font-size 1.6rem
					color blanco
				&:nth-of-type(2)
					font-size 2rem
					font-family 'Dosis-SemiBold'
					color blanco
				&:nth-of-type(4)
					display none
			a 
				font-family 'Dosis-Light'
				font-size 1.4rem
				text-decoration none
				color blanco
				border-radius 3rem
				border 1px solid blanco
				padding 13px 60px
				margin-top 50px
		.icon-chevron-thin-down
			color blanco
			font-size 3rem
			center_x(absolute)
			bottom 0
			cursor pointer
.functioning-container
	style_section_container(blanco)
	.curve
		background-image url(../img/curva2-rosado.png)
		left -100px
		top -100px
		transform rotateX(180deg)
	.functioning-content
		.title-section
			style_line_down(texto)
		.step
			width 240px
			height 240px
			border-radius 50%
			border 2px solid rosado
			padding 10px
			margin 0 80px
			&:nth-of-type(2)
				margin 60px 80px
			p 
				font-size 1.4rem
				color texto
				text-align center
.features-container
	style_section_container(rosado)
	.curve
		right -100px
		top -100px
		transform rotateX(180deg)
	.features-content
		.title-section
			color blanco
			style_line_down(blanco)
		.slider-father
			display flex
			flex-flow row nowrap
			width 300%
			height 500px
			position relative
			left 0
			top 0
			.slider-child
				width 100%
				height 100%
				background-position center
				background-size cover
			.imagen-1
				background-image url(../img/uno.jpg)
			.imagen-2
				background-image url(../img/dos.jpg)
			.imagen-3
				background-image url(../img/tres.jpg)
		.list-features
			width 90%
			height auto
			margin-top 90px 
			margin-bottom 50px
			.feature 
				display flex 
				flex-flow row nowrap
				justify-content flex-start
				align-items flex-start
				margin-bottom 40px 
				&:nth-of-type(3)
					margin-bottom 0
				span
					font-size 2.5rem
					color blanco
					margin-right 10px
				.feature-description
					p 
						color blanco
						&:nth-of-type(1)
							font-size 1.5rem
							font-family 'Dosis-SemiBold'
						&:nth-of-type(2)
							font-size 1.4rem
							font-family 'Dosis-ExtraLight'
.features-mobile
	background-color blanco
	.curve
		background-image url(../img/curva2-rosado.png)
		left -100px
		top -100px
		transform rotateX(180deg)
	.features-content
		.title-section
			color texto 
			style_line_down(texto)
		.slider-father-m
			display flex
			flex-flow row nowrap
			width 300%
			height 500px
			position relative
			left 0
			top 0
			.slider-child-m
				width 100%
				height 100%
				background-position center
				background-size cover
			.imagen-1-m
				background-image url(../img/cuatro.jpg)
			.imagen-2-m
				background-image url(../img/cinco.jpg)
			.imagen-3-m
				background-image url(../img/seis.jpg)
		.list-features
			.feature
				span 
					color texto 
				.feature-description
					p
						color texto	
.made-by-container
	style_section_container(rosado)
	padding 20px 0
	.curve
		transform rotateX(180deg)
		right -120px
		top -120px
	.made-by-content
		p 
			font-size 1.4rem
			color blanco
			margin-bottom 20px
			span
				color blanco
				margin 0 10px 
		img 
			width 270px
			height 90px
footer
	style_section_container(blanco)
	padding 15px 0
	ul 
		list-style none
		display flex 
		flex-flow row wrap
		justify-content space-around
		align-items center
		width 100%
		li 
			color rosado
			font-size 1.2rem
			font-family 'Dosis-Light'
.modal-mail-only
	display none
	width 100%
	height 100%
	background-color rgba(negro, 0.85)
	position fixed
	left 0
	top 0
	z-index 3
	.modal-content
		width 85%
		height auto
		background-color blanco
		center_x_and_center_y(absolute)
		padding 40px 20px
		p 
			color texto
			font-size 1.4rem
			text-align center
		input
			width 70%
			margin-top 40px 
			height 45px 
			line-height 45px
			padding 0 10px
			outline 0
			border 0
			border 1px solid plomo-borde
			font-size 1.3rem
			color texto 
			font-family 'Dosis-ExtraLight'
			text-align center
			&:focus
				outline 0
				border 1px solid rosado
@media screen and (min-width: 300px)
	.modal-mail-only
		.modal-content
			input
				width 240px			
@media screen and (min-width: 600px)
	.home-image
		.home-background
			.name
				p 
					font-size 1.6rem;
			.home-content-central
				p 
					&:nth-of-type(1), &:nth-of-type(3), &:nth-of-type(4)
						color blanco
						text-align center
						font-size 1.8rem
					&:nth-of-type(2)
						font-size 2.2rem
					&:nth-of-type(4)
						display block
				a 
					margin-top 90px
			.icon-chevron-thin-down
				font-size 3.2rem
	.functioning-container
		.functioning-content
			.title-section
				font-size 1.6rem
			.step 
				width 270px
				height 270px
				p 
					font-size 1.6rem
	.features-container
		.features-content
			.title-section
				font-size 1.6rem
			.slider-father
				height 600px
			.list-features
				.feature
					span 
						font-size 2.7rem
					.feature-description
							p 
								&:nth-of-type(1)
									font-size 1.7rem
								&:nth-of-type(2)
									font-size 1.6rem
	.features-mobile
		.features-content
			.slider-father-m
				height 600px
	.made-by-container
		.made-by-content
			p
				font-size 1.6rem
	footer
		ul 
			li 
				font-size 1.4rem
	.modal-mail-only
		.modal-content
			width 500px
			
@media screen and (min-width: 1307px)
	.functioning-container
		.functioning-content
			.step
				&:nth-of-type(2)
					margin-top 0
					margin-bottom 0
	
	